{{#mdl-layout fixedHeader=true}}
  {{#mdl-layout-header}}
    {{mdl-toolbar title="Menus" navigateUpTo="index"}}
  {{/mdl-layout-header}}

  {{#mdl-layout-content}}
    {{#mdl-card}}
      {{mdl-icon-button id="menu1" icon="more_vert"}}

      {{#mdl-menu for="menu1"}}
        {{#mdl-menu-item}}Menu Item 1{{/mdl-menu-item}}
        {{#mdl-menu-item divider=true disabled=true}}Menu Item 2{{/mdl-menu-item}}
        {{#mdl-menu-item}}Menu Item 3{{/mdl-menu-item}}
      {{/mdl-menu}}
    {{/mdl-card}}

    {{#mdl-card}}
      {{#mdl-simple-menu id="menu2" position="bottomRight"}}
        {{#mdl-menu-item}}Menu Item 1{{/mdl-menu-item}}
        {{#mdl-menu-item divider=true disabled=true}}Menu Item 2{{/mdl-menu-item}}
        {{#mdl-menu-item}}Menu Item 3{{/mdl-menu-item}}
      {{/mdl-simple-menu}}
    {{/mdl-card}}

    {{#mdl-card}}
      {{#mdl-simple-menu id="menu3" menuIcon="more_horiz" position="topLeft"}}
        {{#mdl-menu-item}}Menu Item 1{{/mdl-menu-item}}
        {{#mdl-menu-item divider=true disabled=true}}Menu Item 2{{/mdl-menu-item}}
        {{#mdl-menu-item}}Menu Item 3{{/mdl-menu-item}}
      {{/mdl-simple-menu}}
    {{/mdl-card}}

    {{#mdl-card}}
      {{mdl-icon-button id="menu4" icon="more_vert"}}

      {{#mdl-menu for="menu4" position="topRight"}}
        {{#mdl-menu-item}}Menu Item 1{{/mdl-menu-item}}
        {{#mdl-menu-item divider=true disabled=true}}Menu Item 2{{/mdl-menu-item}}
        {{#mdl-menu-item}}Menu Item 3{{/mdl-menu-item}}
      {{/mdl-menu}}

    {{/mdl-card}}

  {{/mdl-layout-content}}
{{/mdl-layout}}