{{#mdl-layout fixedHeader=true}}
  {{#mdl-layout-header}}
    {{mdl-toolbar title="Select field"}}
  {{/mdl-layout-header}}

  {{#mdl-layout-content}}
    <div style="padding: 16px">
      <p>
        {{mdl-selectfield label="Classification" floatingLabel=true options=classifications value=classification}}
      </p>

      <p>
        Selected value: {{classification}}
      </p>

      <p>
        {{mdl-textfield value=classification}}
      </p>
    </div>
  {{/mdl-layout-content}}
{{/mdl-layout}}
